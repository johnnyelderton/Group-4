<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Mode"
        android:textStyle="bold"
        android:textSize="25dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp" />

    <Button
        android:id="@+id/angry_btn"
        android:text="Racing"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="sendRacing"/>

    <Button
        android:id="@+id/button4"
        android:text="Marathon"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="107dp"
        android:layout_below="@+id/angry_btn"
        android:layout_alignLeft="@+id/angry_btn"
        android:layout_alignStart="@+id/angry_btn"
        android:onClick="sendMarathon"/>

    <Button
        android:id="@+id/button5"
        android:text="Asteroids"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:onClick="sendAsteroids"/>




</RelativeLayout>

