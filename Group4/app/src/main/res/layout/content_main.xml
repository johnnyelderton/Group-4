<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.test.group4.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/Background"
    >

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operation Penguin Panic!"
        android:textColor="#FFFFFF"
        android:textAllCaps="true"
        android:layout_marginTop="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/ButtonGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Mode"
        android:layout_margin="8dp"
        android:layout_below="@+id/imageViewL"
        android:layout_alignLeft="@+id/ButtonCustomization"
        android:layout_alignStart="@+id/ButtonCustomization"
        android:layout_alignParentLeft="true"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:clickable="true"

        />

    <Button
        android:id="@+id/ButtonCustomization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customization"
        android:layout_below="@+id/ButtonGame"
        android:layout_margin="8dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:clickable="true"
        />

    <Button
        android:id="@+id/ButtonOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/ButtonCustomization"
        android:layout_margin="8dp"
        android:backgroundTint="#000000"
        android:clickable="true"

        />

    <Button
        android:id="@+id/ButtonScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores"
        android:layout_below="@+id/ButtonOptions"
        android:layout_margin="8dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:clickable="true"
        />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@drawable/Penguin"
        android:scaleType="centerInside"
        />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/Penguin"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Title"
        android:layout_toEndOf="@+id/Title"
        android:id="@+id/imageViewR" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/Penguin"

        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/Title"
        android:layout_toStartOf="@id/Title"
        android:id="@+id/imageViewL" />
</RelativeLayout>
